@model IEnumerable<Task9_1.Models.Group>

@{
    ViewData["Title"] = "Index";
}

<h1>Groups</h1>

<p>
    <a asp-action="Create">Create New Group </a>
</p>
<p>
    <a asp-controller="Courses" asp-action="Index">Back to Courses</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> | 
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a> | 
                <a asp-controller="Students" asp-action="Index" asp-route-id="@item.ID">Go to students >></a>
            </td>
        </tr>
}
    </tbody>
</table>
